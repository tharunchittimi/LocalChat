<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme no Actionbar. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/snack_color</item>
        <item name="colorPrimaryDark">@color/snack_color</item>
        <item name="colorAccent">@color/color919191</item>
    </style>


    <!--Full Screen Theme-->
    <style name="FullScreenTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--custom widgets starts-->
    <declare-styleable name="CustomTextView">
        <attr name="setFont" format="enum">
            <enum name="HelveticaNeue" value="0" />
            <enum name="HelveticaNeue-LightItalic" value="1" />
            <enum name="HelveticaNeue-Light" value="2" />
            <enum name="HelveticaNeue-Medium" value="3" />
            <enum name="HelveticaNeue-Italic" value="4" />
            <enum name="HelveticaNeue-Bold" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomViews">
        <attr name="setFonts" format="enum">
            <enum name="HelveticaNeue" value="0" />
            <enum name="HelveticaNeue-LightItalic" value="1" />
            <enum name="HelveticaNeue-Light" value="2" />
            <enum name="HelveticaNeue-Medium" value="3" />
            <enum name="HelveticaNeue-Italic" value="4" />
            <enum name="HelveticaNeue-Bold" value="5" />
        </attr>
    </declare-styleable>
    <!--EditText-->
    <declare-styleable name="LREditText">
        <attr name="setEditTextFont" format="enum">
            <enum name="helveticaneue" value="0" />
            <enum name="helveticaNeue_bold" value="1" />
            <enum name="helveticaneue_italic" value="2" />
            <enum name="helveticaneue_light" value="3" />
            <enum name="helveticaneue_lightitalic" value="4" />
            <enum name="helveticaneue_medium" value="5" />
        </attr>
    </declare-styleable>

    <string-array name="FontNames">
        <item>HelveticaNeue.ttf</item>
        <item>HelveticaNeue-LightItalic.ttf</item>
        <item>HelveticaNeue-Light.ttf</item>
        <item>HelveticaNeue-Medium.ttf</item>
        <item>HelveticaNeue-Italic.ttf</item>
        <item>HelveticaNeue-Bold.ttf</item>
    </string-array>
    <!--custom widgets ends-->


    <!--    Text styles starts-->
    <style name="small_text">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">HelveticaNeue-Light</item>
    </style>

    <style name="small_text_semi_bold">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="small_text_bold">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>

    <style name="small_text_italic">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">HelveticaNeue-Italic</item>
    </style>

    <style name="very_small_text_italic">
        <item name="android:textSize">@dimen/_8sp</item>
        <item name="setFont">HelveticaNeue-Italic</item>
    </style>

    <style name="medium_small_text">
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="setFont">HelveticaNeue-Light</item>
    </style>

    <style name="medium_small_text_semi_bold">
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="medium_small_text_bold">
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>

    <style name="medium_small_text_italic">
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="setFont">HelveticaNeue-Italic</item>
    </style>

    <style name="medium_text">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="setFont">HelveticaNeue-Light</item>
    </style>

    <style name="medium_text_semi_bold">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="medium_text_bold">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>

    <style name="medium_text_italic">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="setFont">HelveticaNeue-Italic</item>
    </style>

    <style name="medium_large_text_semi_bold">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="medium_large_text_bold">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>

    <style name="medium_large_text_italic">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="setFont">HelveticaNeue-Italic</item>
    </style>


    <style name="large_text">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="setFont">HelveticaNeue-Light</item>
    </style>

    <style name="large_text_semi_bold">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="large_text_bold">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>

    <style name="extra_large_text" parent="android:Widget">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="setFont">HelveticaNeue-Light</item>
    </style>

    <style name="extra_large_text_semi_bold" parent="android:Widget">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
    </style>

    <style name="extra_large_text_bold" parent="android:Widget">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="setFont">HelveticaNeue-Bold</item>
    </style>
    <!--    Text styles ends-->

    <declare-styleable name="MyCustomTextInputLayout">
        <attr name="android:inputType"/>
        <attr name="android:imeOptions"/>
        <attr name="android:maxLength"/>
        <attr name="android:maxLines"/>
        <attr name="tilErrorText" format="string" />
        <attr name="tilHintText" format="string" />
        <attr name="tilText" format="string" />
        <attr name="tilErrorTextColor" format="string" />
        <attr name="tilTextColor" format="string" />
        <attr name="tilHintColor" format="string" />
        <attr name="tilLabelFocusedColor" format="string" />
        <attr name="tilLabelUnFocusedColor" format="string" />
        <attr name="tilLineFocusColor" format="string" />
        <attr name="tilLineUnFocusColor" format="string" />
        <attr name="tilIconType" format="integer" />
        <attr name="tilVisibleToggleIcon" format="boolean" />
        <attr name="tilIcon" format="boolean" />
    </declare-styleable>

    <style name="custom_btn_yellow" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="setFont">HelveticaNeue-Medium</item>
        <item name="android:minHeight">@dimen/dp45</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_yellow_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/bg_button_ripple</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDialogPopup" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="dialogCornerRadius">@dimen/dp20</item>
    </style>

</resources>
