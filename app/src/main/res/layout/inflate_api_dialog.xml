<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llv_accountSignOut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <com.example.localchat.widgets.CustomTextView
        android:id="@+id/tvErrorMessage"
        style="@style/medium_text_semi_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="Are you sure want to sign out?" />


    <com.example.localchat.widgets.CustomButton
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_25dp"
        android:background="@drawable/btn_blue_background"
        android:stateListAnimator="@null"
        android:text="ok"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>
