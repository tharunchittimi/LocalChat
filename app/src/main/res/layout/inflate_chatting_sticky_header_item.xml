<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:hint="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.example.localchat.widgets.CustomTextView
        android:id="@+id/tvDateHeader"
        style="@style/small_text_semi_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_bg_header"
        android:paddingLeft="@dimen/dp20"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp20"
        android:paddingBottom="@dimen/dp5"
        hint:text="25 Oct 2019"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>