<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item
        android:bottom="0dp"
        android:left="-50dp"
        android:right="-50dp"
        android:top="-100dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FEA12B"
                android:centerColor="#FEA12B"
                android:endColor="#FEA12B"
                android:gradientRadius="200%p"
                android:angle="90"
                android:type="linear"/>
            <stroke android:width="@dimen/dp1"
                android:color="@color/light_grey"/>
        </shape>
    </item>
</layer-list>